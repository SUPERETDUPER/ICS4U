<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import main.graphique.nouveauclient.*?>
<VBox spacing="10" fx:id="root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets topRightBottomLeft="30"/>
    </padding>

    <NameField fx:id="prenom" nom="Prénom"/>
    <NameField fx:id="nom" nom="Nom"/>
    <Region/>
    <Text text="Points">
        <font>
            <Font name="System Bold"/>
        </font>
    </Text>
    <Separator/>
    <PointField fx:id="semaineUn" nom="Première semaine"/>
    <PointField fx:id="semaineDeux" nom="Deuxième semaine"/>
    <PointField fx:id="semaineTrois" nom="Troisième semaine"/>
    <PointField fx:id="semaineQuatre" nom="Quatrième semaine"/>
</VBox>
